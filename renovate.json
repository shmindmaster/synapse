{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(America/New_York)"
  ],
  "schedule": [
    "before 10am on monday"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "description": "Group minor and patch updates for production dependencies",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "production dependencies (non-major)",
      "automerge": false
    },
    {
      "description": "Group minor and patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev dependencies (non-major)",
      "automerge": false
    },
    {
      "description": "Auto-merge security patches",
      "matchUpdateTypes": ["patch"],
      "matchDepTypes": ["dependencies"],
      "vulnerabilityAlerts": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Require manual review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update", "requires-review"]
    },
    {
      "description": "Pin shared packages to consistent versions",
      "matchPackageNames": [
        "react",
        "react-dom",
        "typescript",
        "tailwindcss",
        "@types/node",
        "@types/react",
        "@types/react-dom",
        "eslint",
        "prettier",
        "vite"
      ],
      "groupName": "shared packages",
      "automerge": false
    },
    {
      "description": "Python production dependencies",
      "matchManagers": ["pip_requirements", "poetry"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "python production dependencies",
      "automerge": false
    },
    {
      "description": "Python dev dependencies",
      "matchManagers": ["pip_requirements", "poetry"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "python dev dependencies",
      "automerge": false
    }
  ],
  "ignoreDeps": [],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true,
    "automergeType": "pr"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on the first day of the month"]
  },
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "labels": ["dependencies", "automated"],
  "prTitle": "chore(deps): update {{depName}} to {{newVersion}}",
  "rebaseWhen": "behind-base-branch",
  "platform": "github",
  "autodiscover": true,
  "autodiscoverFilter": [
    "shmindmaster/*",
    "sh-pendoah/*"
  ]
}
