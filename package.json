{
  "name": "synapse-monorepo",
  "private": true,
  "version": "2.0.0",
  "packageManager": "pnpm@10.23.0",
  "description": "Synapse - Turn your file system into a queryable knowledge base",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "start": "pnpm --filter backend start",
    "server": "pnpm --filter backend server",
    "test": "pnpm --filter backend test",
    "test:ui": "pnpm --filter backend test:ui",
    "test:headed": "pnpm --filter backend test:headed",
    "test:debug": "pnpm --filter backend test:debug",
    "test:service-health": "pnpm --filter backend test:service-health",
    "test:suite-a": "pnpm --filter backend test:suite-a",
    "test:suite-b": "pnpm --filter backend test:suite-b",
    "test:suite-c": "pnpm --filter backend test:suite-c",
    "test:suite-d": "pnpm --filter backend test:suite-d",
    "test:suite-e": "pnpm --filter backend test:suite-e",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "execa": "^9.6.1",
    "globals": "^15.0.0",
    "postcss": "^8.5.6",
    "prisma": "^7.0.1",
    "tailwindcss": "3.4.1",
    "tmp": "^0.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.2.6"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "lucide-react": "^0.555.0",
    "openai": "^6.9.1",
    "path-browserify": "^1.0.1",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "textract": "^2.5.0",
    "walk": "^2.3.15"
  }
}
