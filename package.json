{
    "name": "synapse-monorepo",
    "private": false,
    "version": "2.0.0",
    "packageManager": "pnpm@10.23.0",
    "description": "Open-source, privacy-first RAG engine for codebases. Transform any codebase into an intelligent, queryable knowledge base that runs entirely on your infrastructure.",
    "keywords": [
        "rag",
        "retrieval-augmented-generation",
        "code-search",
        "semantic-search",
        "ai",
        "llm",
        "codebase-intelligence",
        "developer-tools",
        "privacy-first",
        "local-first",
        "vector-database",
        "pgvector"
    ],
    "homepage": "https://github.com/shmindmaster/synapse#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shmindmaster/synapse.git"
    },
    "bugs": {
        "url": "https://github.com/shmindmaster/synapse/issues"
    },
    "license": "MIT",
    "author": "shmindmaster",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
        "build": "pnpm --filter backend build && pnpm --filter frontend build && pnpm --filter @synapse/cli build && pnpm --filter @synapse/mcp-server build",
        "start": "pnpm --filter backend start",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:seed": "tsx prisma/seed.ts",
        "db:studio": "prisma studio",
        "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
        "cli": "pnpm --filter @synapse/cli start",
        "mcp:dev": "pnpm --filter @synapse/mcp-server dev"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@playwright/test": "^1.57.0",
        "@types/bcrypt": "^6.0.0",
        "@types/node": "^24.10.1",
        "@types/pg": "^8.11.10",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "autoprefixer": "^10.4.22",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "execa": "^9.6.1",
        "globals": "^15.0.0",
        "postcss": "^8.5.6",
        "prisma": "^6.0.0",
    "tailwindcss": "3.4.1",
    "tmp": "^0.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.2.6"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.943.0",
        "@prisma/adapter-pg": "^6.0.0",
        "@prisma/client": "^6.0.0",
        "bcrypt": "^6.0.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.2.1",
        "dotenv": "^17.2.3",
        "fastify": "5.6.2",
        "lucide-react": "^0.555.0",
        "openai": "^6.9.1",
        "path-browserify": "^1.0.1",
        "pg": "^8.16.3",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "tailwind-merge": "^3.4.0",
        "tailwindcss-animate": "^1.0.7",
        "textract": "^2.5.0",
        "walk": "^2.3.15",
        "zod": "^3.24.1"
    }
}