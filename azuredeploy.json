{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "[concat('synapse-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "The name of the Synapse application"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "postgresVersion": {
      "type": "string",
      "defaultValue": "16",
      "allowedValues": ["13", "14", "15", "16"],
      "metadata": {
        "description": "PostgreSQL version"
      }
    },
    "administratorLogin": {
      "type": "string",
      "defaultValue": "synapseadmin",
      "metadata": {
        "description": "Database administrator username"
      }
    },
    "administratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Database administrator password (min 8 characters)"
      }
    },
    "openAiApiKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "OpenAI API Key (optional, can be added later)"
      }
    },
    "authSecret": {
      "type": "securestring",
      "defaultValue": "[concat('secret-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "JWT authentication secret"
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "Standard_B2s",
      "allowedValues": [
        "Standard_B1ms",
        "Standard_B2s",
        "Standard_B2ms",
        "Standard_D2s_v3",
        "Standard_D4s_v3"
      ],
      "metadata": {
        "description": "Database SKU"
      }
    },
    "storageSizeGB": {
      "type": "int",
      "defaultValue": 32,
      "minValue": 32,
      "maxValue": 16384,
      "metadata": {
        "description": "Database storage size in GB"
      }
    },
    "webAppSku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": ["F1", "B1", "B2", "B3", "S1", "S2", "S3", "P1v3", "P2v3"],
      "metadata": {
        "description": "App Service Plan SKU (F1=Free, B1=Basic, S1=Standard, P1v3=Premium)"
      }
    }
  },
  "variables": {
    "postgresServerName": "[toLower(concat(parameters('appName'), '-pg'))]",
    "databaseName": "synapse",
    "appServicePlanName": "[concat(parameters('appName'), '-plan')]",
    "backendAppName": "[concat(parameters('appName'), '-backend')]",
    "frontendAppName": "[concat(parameters('appName'), '-frontend')]",
    "databaseUrl": "[concat('postgresql://', parameters('administratorLogin'),'@', variables('postgresServerName'), ':', parameters('administratorLoginPassword'), '@', variables('postgresServerName'), '.postgres.database.azure.com:5432/', variables('databaseName'), '?sslmode=require')]"
  },
  "resources": [
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2022-12-01",
      "name": "[variables('postgresServerName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "Burstable"
      },
      "properties": {
        "version": "[parameters('postgresVersion')]",
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "storage": {
          "storageSizeGB": "[parameters('storageSizeGB')]"
        },
        "backup": {
          "backupRetentionDays": 7,
          "geoRedundantBackup": "Disabled"
        },
        "network": {
          "publicNetworkAccess": "Enabled"
        },
        "highAvailability": {
          "mode": "Disabled"
        }
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/databases",
      "apiVersion": "2022-12-01",
      "name": "[concat(variables('postgresServerName'), '/', variables('databaseName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', variables('postgresServerName'))]"
      ]
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/firewallRules",
      "apiVersion": "2022-12-01",
      "name": "[concat(variables('postgresServerName'), '/AllowAllAzureIps')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', variables('postgresServerName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers/configurations",
      "apiVersion": "2022-12-01",
      "name": "[concat(variables('postgresServerName'), '/azure.extensions')]",
      "dependsOn": [
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers', variables('postgresServerName'))]"
      ],
      "properties": {
        "value": "vector",
        "source": "user-override"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('webAppSku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[variables('backendAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.DBforPostgreSQL/flexibleServers/databases', variables('postgresServerName'), variables('databaseName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "alwaysOn": "[if(equals(parameters('webAppSku'), 'F1'), false(), true())]",
          "appCommandLine": "npm run build && npm run start",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "DATABASE_URL",
              "value": "[variables('databaseUrl')]"
            },
            {
              "name": "AUTH_SECRET",
              "value": "[parameters('authSecret')]"
            },
            {
              "name": "OPENAI_API_KEY",
              "value": "[parameters('openAiApiKey')]"
            },
            {
              "name": "MODEL_CHAT",
              "value": "gpt-4o"
            },
            {
              "name": "MODEL_FAST",
              "value": "gpt-3.5-turbo"
            },
            {
              "name": "MODEL_EMBEDDING",
              "value": "text-embedding-3-small"
            },
            {
              "name": "PORT",
              "value": "8000"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~20"
            }
          ]
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[variables('frontendAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.Web/sites', variables('backendAppName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "alwaysOn": "[if(equals(parameters('webAppSku'), 'F1'), false(), true())]",
          "appCommandLine": "npm run build && npm run preview",
          "appSettings": [
            {
              "name": "VITE_API_URL",
              "value": "[concat('https://', variables('backendAppName'), '.azurewebsites.net')]"
            },
            {
              "name": "VITE_APP_URL",
              "value": "[concat('https://', variables('frontendAppName'), '.azurewebsites.net')]"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~20"
            }
          ]
        },
        "httpsOnly": true
      }
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "value": "[concat('https://', variables('backendAppName'), '.azurewebsites.net')]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[concat('https://', variables('frontendAppName'), '.azurewebsites.net')]"
    },
    "postgresServer": {
      "type": "string",
      "value": "[concat(variables('postgresServerName'), '.postgres.database.azure.com')]"
    },
    "databaseName": {
      "type": "string",
      "value": "[variables('databaseName')]"
    },
    "nextSteps": {
      "type": "string",
      "value": "1. Wait for deployment to complete (5-10 minutes). 2. Run migrations: Connect to backend app via SSH and run 'npx prisma migrate deploy'. 3. Seed demo user: Run 'npx prisma db seed'. 4. Access frontend at the URL shown above."
    }
  }
}
